<mvc:View controllerName="logaligroup.SAPUI5.controller.InvoicesList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel accessibleRole="Region">
        <headerToolbar>
            <Toolbar >
                <Title text="{i18n>invoiceListTitle}"/>
                <ToolbarSpacer/>
                <SearchField width="50%" search=".onFilterInvoices" placeholder="{i18n>searchFieldPlaceHolder}"/>
            </Toolbar>
        </headerToolbar>
        <Table id="invoiceList" headerText="{i18n>invoiceListTitle}" class="sapUiResposiveMargin" width="auto" items="{ path : 'invoices>/Invoices',
                   sorter : { path : 'ShipperName',
                              group : true }
                 }">
            <columns>
                <Column hAlign="End" minScreenWidth="Small" demandPopin="true" width="5em">
                    <Text text="{i18n>columnQuantity}"/>
                </Column>
                <Column>
                    <Text text="{i18n>columnName}"></Text>
                </Column>
                <Column minScreenWidth="Small" demandPopin="true">
                    <Text text="{i18n>columnStatus}"></Text>
                </Column>
                <Column minScreenWidth="Tablet">
                    <Text text="{i18n>columnSupplier}"></Text>
                </Column>
                <Column hAlign="End">
                    <Text text="{i18n>columnPrice}"></Text>
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Navigation" press="navigateToDetails">

                    <cells>
                        <ObjectNumber number="{invoices>Quantity}" emphasized="false"/>
                        <ObjectIdentifier title="{invoices>ProductName}"/>
                        <Text text="{
                        path: 'invoices>Status',
                        formatter: '.formatter.invoiceStatus'

                    }"/>
                        <Text text="{invoices>ShipperName}"></Text>
                        <ObjectNumber number="{ parts : [ {path : 'invoices>ExtendedPrice'},
                                                {path : 'currency>/usd'}],
                                      type: 'sap.ui.model.type.Currency',
                                      formatOptions: {
                                          showMeasure : false
                                      }}" unit="{currency>/usd}" state="{= ${invoices>ExtendedPrice} > 50 ? 'Success' : 'Error'}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</mvc:View>